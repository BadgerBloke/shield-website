{
    "name": "shield-website",
    "private": true,
    "sideEffects": false,
    "type": "module",
    "scripts": {
        "build": "remix vite:build",
        "dev": "remix vite:dev --host",
        "check-types": "tsc --pretty --noEmit",
        "check-format": "prettier --check .",
        "check-lint": "eslint . --ext ts --ext tsx --ext js --ext jsx",
        "format": "prettier --write .",
        "format:repo": "npm run format && npm run lint -- --fix",
        "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
        "lint:fix": "eslint . --ext ts --ext tsx --ext js --ext jsx --fix",
        "prepare": "node --experimental-network-imports -e \"if(process.env.NODE_ENV !== 'production') { import('./.husky/install.mjs') }\"",
        "start": "remix-serve ./build/server/index.js"
    },
    "dependencies": {
        "@radix-ui/react-icons": "^1.3.0",
        "@radix-ui/react-slot": "^1.1.0",
        "@remix-run/node": "^2.12.1",
        "@remix-run/react": "^2.12.1",
        "@remix-run/serve": "^2.12.1",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "isbot": "^4.1.0",
        "lucide-react": "^0.447.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "remix-themes": "^1.5.1",
        "tailwind-merge": "^2.5.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.4.1",
        "@commitlint/config-conventional": "^19.4.1",
        "@epic-web/config": "^1.12.0",
        "@remix-run/dev": "^2.11.2",
        "@types/eslint": "^9.6.1",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6",
        "autoprefixer": "^10.4.20",
        "bun-types": "^1.1.27",
        "eslint": "8.57.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-next": "14.2.8",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.30.0",
        "eslint-plugin-jsx-a11y": "^6.10.0",
        "eslint-plugin-markdown": "^3.0.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-promise": "^6.4.0",
        "eslint-plugin-react": "^7.35.2",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.1.3",
        "husky": "^9.1.5",
        "lint-staged": "^15.2.10",
        "match-sorter": "^6.3.4",
        "postcss": "^8.4.38",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.6",
        "remix-flat-routes": "^0.6.5",
        "tailwindcss": "^3.4.10",
        "tailwindcss-animate": "^1.0.7",
        "tailwindcss-radix": "^3.0.5",
        "typescript": "^5.5.4",
        "vite": "^5.4.3",
        "vite-tsconfig-paths": "^5.0.1"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
